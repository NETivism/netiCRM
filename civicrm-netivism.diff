+
+  // Greenworld check 
+  function gwSpcheck($process_time,$gwsr,$amount,$spcheck,$check_sum) {    
+    $T = $process_time+$gwsr+$amount;	
+    $a = substr($T,0,1).substr($T,2,1).substr($T,4,1);
+    $b = substr($T,1,1).substr($T,3,1).substr($T,5,1);
+    $c = ( $check_sum % $T ) + $check_sum + $a + $b;
+
+    if($spcheck == $c) {
+      return TRUE;
+    }
+    else {
+      return FALSE;
+    }  
+  }
