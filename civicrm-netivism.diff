+/**
+ * type: upload / response / transaction
+ */
+function _civicrm_newweb_decodeline($in, $type){
+  $o = array();
+  switch($type){
+    case 'response':
+      $key= array(
+        'MERCHANTNUMBER',
+        'REFNUMBER',
+        'CARDNUMBER',
+        'BRAND',
+        'EXPIREDATE',
+        'AMOUNT',
+        'REGULAR',
+        'ACTION',
+        'STATUS',
+        'MODE',
+        'RESPONSE',
+      );
+      break;
+    case 'transaction':
+      $key= array(
+        'MERCHANTNUMBER',
+        'REFNUMBER',
+        'ORGORDERNUMBER',
+        'HTTPCODE',
+        'PRC',
+        'SRC',
+        'BANKRESCODE',
+        'APPROVECODE',
+        'BATCHNUMBER',
+        'MERCHANTORDERNUMBER',
+        'MODE',
+      );
+      break;
+  }
+  $lines = explode("\n",$in);
+  foreach($lines as $l){
+    if($l){ // check if empty line
+      $value = explode(",", $l);
+      $o[] = array_combine($key, $value);
+    }
+  }
+  return $o;
+}
